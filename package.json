{
  "name": "gomeetify-desktop",
  "version": "1.0.0",
  "description": "Gomeetify-Desktop version",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "start": "nodemon --exec electron .",
    "dist": "electron-builder -w",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "Gomeetify",
    "Desktop",
    "ElectronJS"
  ],
  "author": "Netaxis IT Solutions",
  "license": "MIT",
  "devDependencies": {
    "electron": "^18.0.4",
    "electron-builder": "^23.0.3"
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "@popperjs/core": "^2.11.5",
    "bootstrap": "^5.1.3",
    "dayjs": "^1.11.1",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^5.0.1",
    "electron-windows-badge": "^1.1.0",
    "global-mouse-events": "^1.0.7",
    "jquery": "^3.6.0",
    "knex": "^0.95.15",
    "nodemon": "^2.0.15",
    "sqlite3": "^5.0.4",
    "sweetalert2": "^11.4.10"
  },
  "build": {
    "appId": "com.Gomeetify.app",
    "productName": "Gomeetify",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon4.ico"
    },
    "asar": true,
    "asarUnpack": [
      "lib/store"
    ],
    "nsis": {
      "installerIcon": "assets/icon4.ico",
      "uninstallerIcon": "assets/icon4.ico",
      "uninstallDisplayName": "Gomeetify",
      "license": "license",
      "oneClick": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}